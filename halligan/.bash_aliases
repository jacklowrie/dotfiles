# valgrind aliases
alias vg="valgrind"
alias vglc="valgrind --leak-check=full"
alias vglca="valgrind --leak-check=full --show-leak-kinds=all"
alias vgv="valgrind -v"
alias vgvlc="valgrind -v --leak-check=full"

# git aliases
alias gs="git status"
alias gf="git fetch"
alias ga="git add"
alias gc="git commit"
alias gcm="git commit -m"
alias gp="git push"
alias gpp="git pull"
alias gacm="git add . && git commit -m"
alias gd="git diff"

# QoL
alias ls="ls --group-directories-first --color=auto"
alias ll="ls -l --group-directories-first --color=auto"
alias sb="rmate"
alias animals="ls /usr/share/cowsay"
alias say="cowsay -f"
alias \~="cd ~"
alias srcrc="source ~/.bashrc"
alias ..="cd ../"
alias ...="cd ../../"
alias ....="cd ../../../"
alias .....="cd ../../../../"
